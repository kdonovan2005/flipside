<!DOCTYPE html>
<html>
<head>
  <title>Flipside</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if current_user %>
  Signed in as <%= current_user.name %> | <%= link_to "Log Out", '/logout' %> | <%= link_to "Issues", '/issues' %> | <%= link_to "Users", '/users' %>
<% else %>
  <%= link_to 'Log In', '/login' %> | <%= link_to 'Sign Up', '/signup' %>
<% end %>

<%= yield %>

</body>
</html>
